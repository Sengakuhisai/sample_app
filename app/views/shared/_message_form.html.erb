<%= form_for(@message) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content,placeholder: "Send him/her a message..." %>
    <%= f.hidden_field :to_id,value: params[:id] %>
  </div>
  <%= f.submit "Send",class: "btn btn-primary" %>
<% end %>
