<% provide(:title,@title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for@user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile",@user %></span>
      <span><b>Messages:</b><%= @user.recieves.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @msgs.any? %>
      <ol class="messages">
          <% if @title="Msgs you sent" %>
            <%= render "messages/msg_sent" %>
          <% else %>
            <%= render "messages/msg_got" %>
          <% end %>
      </ol>
      <%= will_paginate @msgs %>
    <% end %>
  </div>
</div>
